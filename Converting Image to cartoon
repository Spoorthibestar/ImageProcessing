import cv2
import matplotlib.pyplot as plt
image="website.jpg"
img = cv2.imread(image)
img = cv2.resize(img, (820,540))
cv2.imshow("Result Image", img)
cv2.waitKey()
cv2.destroyAllWindows()
plt.imshow(img)
plt.axis("off")
plt.show()
gray_img = cv2.cvtColor(src=img, code=cv2.COLOR_BGR2GRAY)
cv2.imshow("Result Image", gray_img)
cv2.waitKey()
cv2.destroyAllWindows()
plt.imshow(gray_img)
plt.axis("off")
plt.show()
edge_image = cv2.medianBlur(gray_img, 9)
cv2.imshow("Result Image", edge_image)
cv2.waitKey()
cv2.destroyAllWindows()
plt.imshow(edge_image)
plt.axis("off")
plt.show()
smooth_image = cv2.medianBlur(src=gray_img, ksize=5)
cv2.imshow("Result Image", smooth_image)
cv2.waitKey()
cv2.destroyAllWindows()
plt.imshow(smooth_image)
plt.axis("off")
plt.show()
